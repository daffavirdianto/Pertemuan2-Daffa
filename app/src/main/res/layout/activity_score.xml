<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            android:id="@+id/point1b"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 POINT" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/point2b"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 POINT" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/point3b"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 POINT" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TIM A"
            android:textSize="45dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/scorea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="75dp"
            android:gravity="center" />

        <Button
            android:id="@+id/resettima"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Reset Perhitungan" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="68dp" />

        <Button
            android:id="@+id/resettimb"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Reset Perhitungan" />

        <TextView
            android:id="@+id/scoreb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="75dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/timb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TIM B"
            android:textSize="45dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            android:id="@+id/point1a"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 POINT" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/point2a"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 POINT" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/point3a"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 POINT" />

    </LinearLayout>
</RelativeLayout>